<div class="c-projects">
  <div class="c-projects__title">
    <h2 class="o-text u-hidden js-animation" data-animation="title">Projects</h2>
    <span class="o-symbol o-symbol--after u-hidden js-animation" data-animation="title" data-symbol="â†“"></span>
  </div>
  <div class="c-projects__list">
    {% for project in projects %}
      <section class="c-projects__item js-project">
        <a class="c-projects__link" href="{{ project.url }}" target="_blank">
          <h3 class="o-title o-title--project">{% spanify project.name, 'bigTranslate' %}</h3>
          <div class="c-projects__description">
            <p class="o-small">{% spanify project.description, 'smallTranslate' %}</p>
          </div>
        </a>
      </section>
    {% endfor %}
  </div>
</div>
